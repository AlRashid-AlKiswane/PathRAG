# .uvicorn.env â€“ full Uvicorn configuration

UVICORN_HOST=0.0.0.0
UVICORN_PORT=8001
UVICORN_WORKERS=4
UVICORN_RELOAD=false

UVICORN_LOG_LEVEL=info
UVICORN_PROXY_HEADERS=true
UVICORN_FORWARDED_ALLOW_IPS=*

UVICORN_LIMIT_CONCURRENCY=100
UVICORN_BACKLOG=2048
UVICORN_TIMEOUT_KEEP_ALIVE=5
UVICORN_LIMIT_MAX_REQUESTS=10000

UVICORN_ACCESS_LOG=true
UVICORN_USE_COLORS=true
UVICORN_SERVER_HEADER=true
UVICORN_DATE_HEADER=true

# Optional SSL
# UVICORN_SSL_KEYFILE=/path/to/key.pem
# UVICORN_SSL_CERTFILE=/path/to/cert.pem
# UVICORN_SSL_CA_CERTS=/path/to/ca.pem
# UVICORN_SSL_KEYFILE_PASSWORD=yourpassword
